# Baby Shower App - Environment Variables

# =============================================================================
# CLOUDFLARE R2 STORAGE
# =============================================================================
# Get these from: Cloudflare Dashboard > R2 > Manage R2 API Tokens
R2_ACCOUNT_ID=your_r2_account_id_here
R2_ACCESS_KEY_ID=your_r2_access_key_id_here
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key_here
R2_BUCKET_NAME=your_bucket_name

# =============================================================================
# SECURITY
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_secret_key_here_64_characters_long

# Generate with: python -c "import secrets; print(secrets.token_urlsafe(16))"
# This is the password for /admin login
ADMIN_PASSWORD=your_strong_admin_password_here

# =============================================================================
# DATABASE
# =============================================================================
# Local development (SQLite)
DATABASE_URL=sqlite:///babyshower.db

# Production (Railway PostgreSQL)
# Railway will automatically set this when you add PostgreSQL database
# DATABASE_URL=postgresql://user:password@host:port/database

# =============================================================================
# FLASK CONFIGURATION
# =============================================================================
# Set to 'production' on Railway for secure cookies
FLASK_ENV=development

# =============================================================================
# ADMIN PUSH NOTIFICATIONS CONFIGURATION
# =============================================================================
PUSHOVER_APP_TOKEN=your-app-token
PUSHOVER_USER_KEY=your-user-key